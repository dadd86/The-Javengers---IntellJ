<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" styleClass="contenedor-principal" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.thejavengers.vista.gestionSocios.ControladorVistaSocios">
    <Label styleClass="titulo-principal" text="Gestión de Socios" />

    <TableView fx:id="tablaSocios" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="idColumn" editable="false" prefWidth="50" text="ID" />
            <TableColumn fx:id="nombreColumn" editable="false" prefWidth="100" text="Nombre" />
            <TableColumn fx:id="apellidosColumn" editable="false" prefWidth="150" text="Apellidos" />
            <TableColumn fx:id="tipoColumn" editable="false" prefWidth="100" text="Tipo" />
            <TableColumn fx:id="seguroColumn" editable="false" prefWidth="100" text="Seguro" />
            <TableColumn fx:id="federacionColumn" editable="false" prefWidth="100" text="Federación" />
            <TableColumn fx:id="tutorColumn" editable="false" prefWidth="100" text="Tutor ID" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="botonAgregar" onAction="#irAMenuAgregarSocio" styleClass="boton-principal" text="Agregar Socio" />
        <Button fx:id="botonEliminar" styleClass="boton-principal" text="Eliminar Socio" />
        <Button fx:id="botonModificarSeguro" styleClass="boton-principal" text="Modificar Seguro" />
        <Button fx:id="botonMostrarFactura" styleClass="boton-principal" text="Mostrar Factura" />
        <Button fx:id="botonVolver" styleClass="boton-principal" text="Volver al Menú Principal" />
    </HBox>
</VBox>
