<?xml version="1.0" encoding="UTF-8"?>
<!-- Archivo FXML para centrar dinámicamente un VBox dentro de un AnchorPane -->
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.thejavengers.vista.gestionExcursiones.VistaGestionExcurciones"
            stylesheets="@../styles.css">
<children>
    <!-- VBox centrado dinámicamente dentro del AnchorPane -->
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <children>
            <!-- Título de la ventana -->
            <Label text="Gestión de Excursiones" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Separator />
            <!-- Botón para añadir excursiones -->
            <Button text="Añadir Excursión" onAction="#manejarAnadirExcursion" />

            <!-- Botón para filtrar excursiones entre fechas -->
            <Button text="Filtrar Excursiones entre Fechas" onAction="#manejarFiltrarFechas" />

            <!-- Botón para mostrar los socios inscritos -->
            <Button text="Mostrar Socios Inscritos" onAction="#manejarMostrarSocios" />
            <Separator />

            <!-- Botón para volver al menú principal -->
            <Button text="Volver al Menú Principal" onAction="#manejarVolverMenu" />
        </children>
    </VBox>
</children>
</AnchorPane>
