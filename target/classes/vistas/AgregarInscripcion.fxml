<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.thejavengers.controlador.ControladorAgregarInscripcion"
      spacing="10" alignment="CENTER" styleClass="contenedor-principal">

    <Label text="Agregar Inscripcion" styleClass="titulo-principal"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="ID Inscripción:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idInscripcion" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre Socio:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreSocio" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Apellidos Socio:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="apellidosSocio" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Descripción Excursción:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="descripcionExcursion" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Estado Inscripción:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="estadoInscripcion" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Fecha Inscripción:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="fechaInscripcion" GridPane.rowIndex="4" GridPane.columnIndex="1" visible="true"/>
    </GridPane>


    <HBox spacing="10" alignment="CENTER">
        <Button text="Guardar" fx:id="guardarButton" styleClass="boton-principal"/>
        <Button text="Cancelar" fx:id="cancelarButton" styleClass="boton-secundario" onAction="#volverAGestionInscripciones"/>
    </HBox>
</VBox>