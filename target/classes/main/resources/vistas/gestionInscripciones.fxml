<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.thejavengers.controlador.ControladorInscripcionesVista"
      spacing="10" alignment="CENTER" styleClass="contenedor-principal">

    <Label text="Gestión de Inscripciones" styleClass="titulo-principal"/>

    <TableView fx:id="tablaInscripciones" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="idInscripcion" text="ID Inscripción" prefWidth="100"/>
            <TableColumn fx:id="nombreSocio" text="Nombre Socio" prefWidth="200"/>
            <TableColumn fx:id="apellidosSocio" text="Apellidos Socio" prefWidth="200"/>
            <TableColumn fx:id="descripcionExcursion" text="Detalles Excursión" prefWidth="250"/>
            <TableColumn fx:id="fechaInscripcion" text="Fecha Inscripción" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="botonInscribir" text="Añadir Inscripción" styleClass="boton-principal" onAction="#irAMenuAgregarInscripcion"/>
        <Button fx:id="botonEliminar" text="Eliminar Inscripción" styleClass="boton-principal" onAction="#eliminarInscripcion"/>
        <Button fx:id="botonModificar" text="Modificar Inscripción" styleClass="boton-principal" onAction="#modificarInscripcion"/>
        <Button fx:id="botonConsultar" text="Consultar Inscripciones" styleClass="boton-principal" onAction="#consultarInscripcion"/>
        <Button fx:id="botonCancelar" text="Cancelar Inscripción" styleClass="boton-principal" onAction="#cancelarInscripcion"/>
        <Button onAction="#volverAlMenu" text="Volver al Menú Principal" styleClass="boton-principal"/>
    </HBox>
</VBox>