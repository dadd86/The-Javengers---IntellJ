<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>



<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml" fx:controller="org.thejavengers.vista.gestionExcursiones.VistaGestionExcursiones">
    <!-- Título de la ventana -->
    <Label text="Gestión de Excursiones" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Botón para añadir excursiones -->
    <Button text="Añadir Excursión" onAction="#manejarAnadirExcursion" />

    <!-- Botón para filtrar excursiones entre fechas -->
    <Button text="Filtrar Excursiones entre Fechas" onAction="#manejarFiltrarFechas" />

    <!-- Botón para mostrar los socios inscritos -->
    <Button text="Mostrar Socios Inscritos" onAction="#manejarMostrarSocios" />

    <!-- Botón para volver al menú principal -->
    <Button text="Volver al Menú Principal" onAction="#manejarVolverMenu" />
</VBox>

